root = true

[*.{js,json}]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.js]
max_line_length=80
# the following are not universally supported, do not be alarmed if they have
# no effect
quote_type=single
curly_bracket_next_line=false
